generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

enum EmailCodeProps {
  VERIFY_EMAIL
  RESET_PASSWORD
}

enum ChatRole {
  USER
  ASSISTANT
}

enum ChatMode {
  CREATIVE     
  BALANCED   
  STRICT     
}

enum ArticleStatus {
  DRAFT
  PENDING
  PUBLISHED
  REJECTED
}

enum ArticleCategory {
  PREMIUM_COLLECTION
  BEST_MINIMALS
  CRAZY_SHOES
  NEW_SHOES
  MY_BLOG
  USERS_ARTICLES
}

model User {
  id                 String              @id @default(uuid())
  email              String              @unique
  password           String
  isVerified         Boolean             @default(false)
  role               Role                @default(USER)
  createdAt          DateTime            @default(now())
  passwordResetTokens PasswordResetToken[]
  emailCodes          EmailCode[]
  chatSession         ChatSession[]
  articles            Article[]
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
}

model EmailCode {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  codeHash  String
  EmailCodeProps  EmailCodeProps @default(VERIFY_EMAIL)
  expiresAt DateTime
  used      Boolean  @default(false)
  @@index([userId])
}

model ChatMessage {
  id        String   @id @default(uuid())
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role      ChatRole
  content   String? 
  imageUrl  String?    
  createdAt DateTime @default(now())
}

model ChatSession {
  title     String  @default("New chat")
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  mode      ChatMode
  createdAt DateTime @default(now())
  messages  ChatMessage[]
}

model Article {
  id               String          @id @default(uuid())
  title            String
  slug             String          @unique
  shortDescription String
  content          String          @db.Text
  coverImage       String          
  images           String[]       
  
  category         ArticleCategory
  status           ArticleStatus   @default(PENDING)
  
  views            Int             @default(0)
  tags             String[]       
  
  authorId         String
  author           User            @relation(fields: [authorId], references: [id])
  
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  publishedAt      DateTime?  
  @@index([category])        
  @@index([status])        
  @@index([authorId])       
}